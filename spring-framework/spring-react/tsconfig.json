{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./lib",
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "importHelpers": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
