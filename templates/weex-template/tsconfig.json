{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "compileOnSave": false,
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "./services/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "esnext",
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*",
    "types/index.d.ts",
    "node_modules/common_starter/types/index.d.ts",
    "node_modules/common_core/types/PromiseExt.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
