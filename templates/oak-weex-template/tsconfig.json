{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "compileOnSave": false,
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@enums/*": [
        "./enums/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@constant/*": [
        "./constant/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@views/*": [
        "./views/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "typeRoots":  [
      "node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "src/**/*",
    "types/index.d.ts",
    "node_modules/common_fetch/types/index.d.ts",
    "node_modules/common_starter/types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
