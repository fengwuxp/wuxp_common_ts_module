{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@feign/*": [
        "./feign/*"
      ],
      "@enums/*": [
        "./enums/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@constant/*": [
        "./constant/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@views/*": [
        "./views/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    },
    "types": [
      "node",
      "jest",
      "react",
      "react-dom",
      "react-router",
      "react-router-dom",
      "react-loadable"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    ".spring/**/*",
    "node_modules/fengwuxp_common_starter/types/index.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
