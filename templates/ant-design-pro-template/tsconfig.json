{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    //导入语法 import foo from "foo"
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "compileOnSave": false,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["./services/*"]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "react-router",
      "react-router-dom",
      "react-loadable"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "node_modules/common_starter/types/index.d.ts",
    "node_modules/common_core/types/PromiseExt.ts"

  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
