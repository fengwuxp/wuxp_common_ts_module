{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop":true,
    "allowSyntheticDefaultImports": true,
    "compileOnSave": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es6",
      "esnext",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
