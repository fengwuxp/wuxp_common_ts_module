{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "baseUrl": "./src",
    "types": [
      "node"
    ],
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
