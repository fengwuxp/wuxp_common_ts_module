{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "jsxFactory": "React.createElement",
    "jsx": "react",
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "lib": [
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
