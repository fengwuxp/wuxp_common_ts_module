{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "target": "es5",
    "outDir": "lib",
    "sourceMap": false,
    "strict": false,
    "baseUrl": "./src",
    "types": [
      "node",
      "webpack"
    ],
    "lib": [
      "esnext",
      "dom",
      "es6",
      "es2015",
      "es2015.promise"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
